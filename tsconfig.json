{
	"compilerOptions": {
    "target": "es2016",
		"strictNullChecks": true,
    "lib": ["ES2016", "DOM"],
    "esModuleInterop": true,
    "noUnusedParameters": true,
    "noUnusedLocals": true,
    "noImplicitAny": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,
    "sourceMap": false,
    "noEmit": true,
    "rootDir": ".",
    "moduleResolution": "nodenext",
    "module": "nodenext",
	},
  "include": ["./**/*.ts", "./**/*.tsx", "./**/*.d.ts"]
}